{
  "$schema": "./appsettings-schema.json",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Umbraco.Cms.Tests": "Information"
    },
    "Console": {
      "DisableColors": true
    }
  },
  "Tests": {
    "Database": {
      "PrepareThreadCount": 4,
      "SchemaDatabaseCount": 4,
      "EmptyDatabasesCount": 2,

      "DatabaseType": "SQLite" // "SQLite", "LocalDb"
    }
  },
  "#_Tests": {
    "Database": {
      "PrepareThreadCount": 4,
      "SchemaDatabaseCount": 4,
      "EmptyDatabasesCount": 2,

      "DatabaseType": "SqlServer",
      "SQLServerMasterConnectionString": "Server=.\\sql2025;Database=UmbracoTest-1;Integrated Security=true;TrustServerCertificate=true;"
    }
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "AllowedUploadedFileExtensions": [ "jpg", "png", "gif", "svg" ]
      },
      "__Global": {
        "Smtp": {
          "From": "your@email.here",
          "Host": "localhost",
          "Port": 25
        }
      }
    }
  }
}
